<p id="notice">
  <%= notice %>
</p>
<p>
  <b>Company symbol:</b>
  <%= @stock.symbol %>
</p>
<p>
  <b>Company name:</b>
  <%= @stock.company_name %>
</p>
<p>
  <b>Price:</b>
  <%= @stock.price %>
</p>
<p>
  <b>Market cap:</b>
  <%= @stock.market_cap %>
</p>

<% if current_user.role == nil %>
  <h2>Buy stock:</h2>
  <%= render "transactions/form", transaction: @stock.transactions.build %>

  <% else %>
    <% if current_user.role.name == "buyer" %>
       <h2>Buy stock:</h2>
        <%= render "transactions/form", transaction: @stock.transactions.build %>
    <% end %>
<% end %>
<%= link_to "Back", stocks_path %>
