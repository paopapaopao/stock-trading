%body
  %header.p-3.bg-dark.text-white
    .container
      .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
        %a.d-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none{:href => "/"}
          = image_tag "logo-stock.png", alt: "Stock Trading", style: "height: 50px;width:100%;"
        %ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
          %li= link_to "Stocks", stocks_path, class: "nav-link px-2 text-white"
          %li= link_to "Transactions", transactions_path, class: "nav-link px-2 text-white"
          - if user_signed_in?
            - if current_user.isadmin == true
              %li= link_to "Roles", roles_path, class: "nav-link px-2 text-white"
              %li= link_to "Users", users_path, class: "nav-link px-2 text-white"
            - else
          - else
        .text-end
          - if user_signed_in?
            = link_to "Edit Profile", edit_user_registration_path, class: "btn btn-outline-light me-2"
            = link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-warning"
          - else
            = link_to "Log in", new_user_session_path, class: "btn btn-outline-light me-2"
            = link_to "Sign up", new_user_registration_path, class: "btn btn-warning"
